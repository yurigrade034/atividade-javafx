<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<VBox alignment="CENTER" prefHeight="259.0" prefWidth="428.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.trabalhojavafx.Atividade2ConversorTemperaturaController">

    <children>
      <HBox alignment="CENTER" prefHeight="62.0" prefWidth="591.0">
         <children>
              <TextField fx:id="campoTemperatura" alignment="CENTER" prefHeight="26.0" prefWidth="263.0" promptText="Temperatura" style="-fx-background-color: #941E10; -fx-text-fill: white; -fx-background-radius: 20;" />
         </children>
      </HBox>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#converterParaF" style="-fx-background-color: #941E10; -fx-text-fill: white; -fx-background-radius: 20;" text="Converter para °F" />
                <Button onAction="#converterParaC" style="-fx-background-color: #941E10; -fx-text-fill: white; -fx-background-radius: 20;" text="Converter para °C" />
            </children>
        </HBox>

        <Label fx:id="rotuloResultado" text="Resultado: ">
         <textFill>
            <LinearGradient endX="1.0" endY="0.3068181655623695" startX="1.0" startY="0.8295454220338302">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill></Label>

        <Button onAction="#voltar" style="-fx-background-color: #941E10; -fx-text-fill: white; -fx-background-radius: 20;" text="Voltar" />
    </children>
</VBox>
