<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<VBox alignment="CENTER" prefHeight="195.0" prefWidth="466.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.trabalhojavafx.Atividade1CalculadoraController">

    <children>
        <HBox alignment="CENTER" prefHeight="58.0" prefWidth="466.0" spacing="10">
            <children>
                <TextField fx:id="campoNumero1" alignment="CENTER" promptText="Número 1" style="-fx-background-color: #941E10; -fx-text-fill: white;" />
                <TextField fx:id="campoNumero2" alignment="CENTER" promptText="Número 2" style="-fx-background-color: #941E10; -fx-text-fill: white;" />
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#somar" style="-fx-background-color: #941E10;" text="+" textFill="WHITE" />
                <Button onAction="#subtrair" style="-fx-background-color: #941E10;" text="-" textFill="WHITE" />
                <Button onAction="#multiplicar" style="-fx-background-color: #941E10;" text="×" textFill="WHITE" />
                <Button onAction="#dividir" style="-fx-background-color: #941E10;" text="÷" textFill="WHITE" />
            </children>
        </HBox>

        <Label fx:id="rotuloResultado" text="Resultado: ">
         <textFill>
            <LinearGradient startY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill></Label>

        <Button onAction="#voltar" style="-fx-background-color: #941E10;" text="Voltar" textFill="WHITE" />
    </children>
</VBox>
